@model RooyaDev.Models.Banner

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="right-panel" class="right-panel">

    <!-- Header-->
    <header id="header" class="header">
        <div class="header-menu">
            <div class="col-sm-7">
                <a id="menuToggle" class="menutoggle pull-left"><i class="fa fa fa-tasks"></i></a>
                <div class="center">
                    <i class="fa fa-laptop"> </i> <label>Details</label>
                </div>
                <div class="header-left">
                </div>
            </div>
        </div>
    </header><!-- /header -->
    <!-- Header-->
    <div class="col-md-12">
        <h3 class="white"><i class="fa fa-laptop"></i> </h3> <hr />
        <table class="table table-bordered table-hover white">

            <tr class="alert">
                <td class="col-md-6">First Head</td>
                <td class="col-md-6">@Model.FirstHead</td>
            </tr>
            <tr class="alert">
                <td class="col-md-6">First Head AR</td>
                <td class="col-md-6">@Model.FirstHead_AR</td>
            </tr>

            <tr class="alert">
                <td class="col-md-6">Second Head</td>
                <td class="col-md-6">@Model.SecondHead</td>
            </tr>
            <tr class="alert">
                <td class="col-md-6">Second Head AR</td>
                <td class="col-md-6">@Model.SecondHead_AR</td>
            </tr>
            <tr class="alert">
                <td class="col-md-6">;Link</td>
                <td class="col-md-6">@Model.Link </td>
            </tr>
            <tr class="alert">
                <td class="col-md-6">Photo</td>
                <td class="col-md-6"><img src="~/Uploads/Banner/@(Model.ID).jpg" /></td>
            </tr>
