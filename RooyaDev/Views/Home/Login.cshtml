
@{
    Layout = null;
    string code = "en";
    string Dir = "";
    if (Request.Cookies["Language"]!=null)
    {
        if(Request.Cookies["Language"].Value=="ar")
        {
            code = "ar";
            Dir = "rtl";
        }
    }
}
<!DOCTYPE html>
<html dir="@Dir" lang="@code">
<head>
    <title>@SiteResource.Login</title>
    <!-- Meta-Tags -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <script>
		addEventListener("load", function () {
			setTimeout(hideURLbar, 0);
		}, false);

		function hideURLbar() {
			window.scrollTo(0, 1);
		}
    </script>
    <!-- //Meta-Tags -->
    <!-- Stylesheets -->
    <link rel="shortcut icon" href="~/images/Ro2iaen.png" type="image/x-icon">
    <link rel="icon" href="~/images/Ro2iaen.png" type="image/x-icon">
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/login style.css" rel="stylesheet" />
    <!--// Stylesheets -->
    <!--fonts-->
    <link href="//fonts.googleapis.com/css?family=Source+Sans+Pro:200,200i,300,300i,400,400i,600,600i,700,700i,900,900i" rel="stylesheet">
    <!--//fonts-->
    <style>
        h2 {
            color: white;
        }
    </style>
    @if (code == "en")
    {
        <style>
            .w3ls-login label {
                float: left;
            }
        </style>
    }
    else
    {
        <style>
            .w3ls-login label {
                float: right;
            }
        </style>
    }
    <style>
        #messages {
            padding: 15px 10px;
            margin: 15px 0;
            border: 1px solid #ff9900;
            color: #ff9900;
            text-align: center;
        }

            #messages p {
                color: #555;
                font-size: 14px;
                font-weight: 700;
                text-align: center;
            }
    </style>
    <link href="https://fonts.googleapis.com/css?family=Droid+Arabic+Kufi" rel="stylesheet">
</head>
<body style="font-family:Comic Sans MS , Droid Arabic Kufi">
    <h1>@SiteResource.Login </h1>
    @if (ViewBag.error != null)
    {
        <div id="messages">
            <h4>@ViewBag.error</h4>
        </div>
    }
    <div class="w3ls-login">
        <!-- form starts here -->
        <form action="~/Home/Login" method="post">
            <div class="agile-field-txt">
                <label>
                    <i class="fa fa-user" aria-hidden="true"></i> @SiteResource.Email :
                </label>
                <input type="text" name="Email" placeholder="" required="" />
            </div>
            <div class="agile-field-txt">
                <label>
                    <i class="fa fa-lock" aria-hidden="true"></i> @SiteResource.Password :
                </label>
                <input type="password" name="Password" placeholder="" required="" id="myInput" />
                <div class="agile_label">
                    <input id="check3" name="check3" type="checkbox" value="show password" onclick="myFunction()">
                    <label class="check" for="check3">@SiteResource.showPassword</label>
                </div>
            </div>
            <script>
				function myFunction() {
					var x = document.getElementById("myInput");
					if (x.type === "password") {
						x.type = "text";
					} else {
						x.type = "password";
					}
				}
            </script>
            <!-- //script for show password -->
            <div class="w3ls-login  w3l-sub">
                <input type="submit" value="@SiteResource.Login">
            </div>
            <div class="agile_label">
                <p>@SiteResource.Nothaveaccount<a href="~/Home/Register">@SiteResource.Register</a></p>
            </div>

        </form>
    </div>
    <!-- //form ends here -->
</body>
</html>
