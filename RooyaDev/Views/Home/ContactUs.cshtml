            </div>
        </div>


        <form action="~/Home/ContactUs" method="post">
            <div class="col-lg-7" id="coco">
                <div class="row form-group">
                    <div class="col-md-12">
                        <input type="text" id="name" name="Name" required class="form-control" placeholder="@SiteResource.Name">
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <input type="email" id="email" name="Email" required class="form-control" placeholder="@SiteResource.Email">
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <input type="text" id="location" name="Subject" required class="form-control" placeholder="@SiteResource.Subject">
                    </div>
                </div>
                <div class="row form-group col-md-12">
                    <textarea placeholder="@SiteResource.Message" required name="Message" cols="30" rows="5" class="form-control"></textarea>
                </div>
                <div class="row form-group">
                    <div class="form-group">
                        <input id="btn" type="submit" value="@SiteResource.SendMessage" class="btn btn-primary" style="width:100%;">
                    </div>
                </div>
            </div>
        </form>
</div>
</div>
