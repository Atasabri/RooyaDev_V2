<div class='contactus'>
    <div class='container'>
        <div class='col-lg-12 top'>
            <span>@SiteResource.ContactInfo</span>
            <p>@SiteResource.Contact</p>
        </div>
        <div class='col-lg-5 col-md-6 col-sm-12 first'>
            <div class='box'>
                <div class='title'>
                    <img src='~/images/Mobile Sales.png' alt=''>
                    <span>@SiteResource.ContactInfo</span>
                </div>
                <div class='contactinfo'>
                    <div class='one'>
                        <img src='~/images/contactus-icon-3.png' alt=''>
                        <p>@SiteResource.Cairo: <a href="tel:+201000092584">201000092584+</a></p>
                    </div>
                    <div class='one'>
                        <img src='~/images/contactus-icon-3.png' alt=''>
                        <p>@SiteResource.KSA : <a href="tel:+9660531071434">966531071434+</a></p>
                    </div>
                    <div class='one'>
                        <img src='~/images/contactus-icon-5.png' alt=''>
                        <p>
                            @SiteResource.Email : <a href="mailto:info@rooyadev.com">info@rooyadev.com</a>
                            <div class='socialmedia'>
                                <a href="https://twitter.com/DevRooya" target="_blank" class="sm twitter"><i class="fa fa-twitter"></i></a>
                                <a href="https://www.facebook.com/rooyadeve/" target="_blank" class="sm facebook"><i class="fa fa-facebook"></i></a>
