@model IEnumerable<RooyaDev.Models.Pricing>
@using RooyaDev.Models
@{
    ViewBag.Title = SiteResource.Pricing;
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    string code = "en";
    string aa = "right";
    if (Request.Cookies["Language"] != null)
    {
        if (Request.Cookies["Language"].Value == "ar")
        {
            code = "ar";
            aa = "left";
        }
    }
}
<div class="page">
    <div class="image" style="background-image: url(../../images/createwebsite-image.jpg)"></div>
    <div class="text">
        <div class="container">
            <img src="../../images/pricing.png" alt="">
            <span>@SiteResource.Pricing</span>
        </div>
    </div>
</div>


<div class='hostplans'>
    <div class='container'>
           @if (code == "en")
           {
               foreach (var item in Model)
               {
                <div class='col-lg-4 col-md-4 col-sm-6 col-xs-12'>
                    <div class='one'>
                        <div class='top'>
                            <span>@item.Name</span>
                        </div>
                        <div class='content'>
                            <div class='Tabs1 alltabs'>
                                <img src="~/Uploads/Pricing/@(item.ID).jpg" />
                            </div>
                            <div class='third anchors3 text-center' style="margin-top:200px;">
                                @if (Session["Login"] != null)
                                {
                                    if (Session[item.ID.ToString()] == null)
                                    {
                                        using (Html.BeginForm("Order", "Home", new { price_id = item.ID }))
                                        {
                                            <input class="btn btn-info" type="submit" value="@SiteResource.Order"/>                                            
                                        }
                                    }
                                    else
                                    {
                                        <span>@SiteResource.YouOrderThisPrice</span>
                                    }
                                }
                                else
                                {
                                    <div class="btn-group" role="group" aria-label="..">
                                        <a href="~/Home/Login" class="btn btn-default">@SiteResource.Login</a>
                                        <a href="~/Home/Register" class="btn btn-default">@SiteResource.Register</a>
                                    </div>
                                }  
                            </div>
                        </div>
                    </div>
                </div>
               }
           }
           else
           {
               foreach (var item in Model)
               {
                <div class='col-lg-4 col-md-4 col-sm-6 col-xs-12'>
                    <div class='one'>
                        <div class='top'>
                            <span>@item.Name_AR</span>
                        </div>
                        <div class='content'>
                            <div class='Tabs1 alltabs'>
                                <img src="~/Uploads/Pricing/@(item.ID).jpg" />
                            </div>
                            <div class='third anchors3 text-center' style="margin-top:200px;">
                                @if (Session["Login"] != null)
                                {
                                    if (Session[item.ID.ToString()] == null)
                                    {
                                        using (Html.BeginForm("Order", "Home", new { price_id = item.ID }))
                                        {
                                            <input class="btn btn-info" type="submit" value="@SiteResource.Order" />
                                        }
                                    }
                                    else
                                    {
                                        <span>@SiteResource.YouOrderThisPrice</span>
                                    }
                                }
                                else
                                {
                                    <div class="btn-group" role="group" aria-label="..">
                                        <a href="~/Home/Login" class="btn btn-default">@SiteResource.Login</a>
                                        <a href="~/Home/Register" class="btn btn-default">@SiteResource.Register</a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
               }
           }
     </div>
</div>

<div class="row" id="soso">
            <div class="col-md-12 animate-box menu-1 text-center">
    <h3>@SiteResource.OrderCustomProject</h3>

                @if (ViewBag.error != null)
                {
                    <div class="alert alert-danger" role="alert">
                        <span class="" aria-hidden="true"></span>
                        <span class="sr-only">Error:</span>
                        @ViewBag.error
                    </div>
                }

                @if (ViewBag.Done != null)
                {
                    <div class="alert alert-success" role="alert">
                        <span class="" aria-hidden="true"></span>
                        <span class="sr-only">Done:</span>
                        @ViewBag.Done
                    </div>
                }
    @if (Session["Login"] == null)
    {
        <br/>
        <br/>
        <div class="btn-group" role="group" aria-label="..">
            <a href="~/Home/Login" class="btn btn-default">@SiteResource.Login</a>
            <a href="~/Home/Register" class="btn btn-default">@SiteResource.Register</a>
        </div>
        <br/><br/>
    }
    else
    {
                    <form action="~/Home/Pricing" method="post" enctype="multipart/form-data">
                        <div class="row form-group">
                            <div class="col-md-12">
                                <input type="text" id="name" required name="Name" class="form-control" placeholder="@SiteResource.ProjectName">
                            </div>

                        </div>
                        <div class="row form-group">
                            <div class="col-md-12">
                                <textarea id="email" required name="Description" class="form-control" placeholder="@SiteResource.ProjectDesc"></textarea>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-md-12">
                                <input type="date" id="date" name="DeadLine" required class="form-control" placeholder="@SiteResource.DeadLine MM/DD/yyyy">
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="upload-btn-wrapper">
                                <button class="btn" style="background-color:antiquewhite"><i class="icon-paper"></i> @SiteResource.Uploadapdffile</button>
                                <input type="file" name="myfile" />
                            </div>
                        </div>                            <div class="form-group">
                            <input type="submit" value="@SiteResource.Order" class="btn btn-primary">
                        </div>
                    </form>

                }
            </div>
                </div>
