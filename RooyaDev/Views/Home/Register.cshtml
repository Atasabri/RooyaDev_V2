@model RooyaDev.Models.User

@{
    Layout = null;
    string code = "en";
    string Dir = "";
    if (Request.Cookies["Language"] != null)
    {
        if (Request.Cookies["Language"].Value == "ar")
        {
            code = "ar";
            Dir = "rtl";
        }
    }
}

<!DOCTYPE html>

<html dir="@Dir" lang="@code">
<head>
    <title>@SiteResource.Register</title>
    <!-- Meta-Tags -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    <!-- //Meta-Tags -->
    <!-- Stylesheets -->
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/login%20style.css" rel="stylesheet" />
    <!--// Stylesheets -->
    <!--fonts-->
    <link href="//fonts.googleapis.com/css?family=Source+Sans+Pro:200,200i,300,300i,400,400i,600,600i,700,700i,900,900i" rel="stylesheet">
    <!--//fonts-->
    <link href="https://fonts.googleapis.com/css?family=Droid+Arabic+Kufi" rel="stylesheet">
    <style>
        h2 {
            color: white;
        }
    </style>
    @if (code == "en")
    {
        <style>
            .w3ls-login label{
                float:left;
            }
        </style>
    }
    else
    {
        <style>
            .w3ls-login label {
                float: right;
            }
        </style>
    }
    <style>
        #messages {
            padding: 15px 10px;
            margin: 15px 0;
            border: 1px solid #ff9900;
            color: #ff9900;
            text-align: center;
        }

            #messages p {
                color: #555;
                font-size: 14px;
                font-weight: 700;
                text-align: center;
            }
    </style>
</head>
<body style="font-family:Comic Sans MS , Droid Arabic Kufi" dir="@Dir">
    <h1>@SiteResource.Register</h1>
    @if (ViewBag.error != null)
    {
        <div id="messages">
            <h4>@ViewBag.error</h4>
        </div>
    }
    <div class="w3ls-login">
        <!-- form starts here -->
        <form action="~/Home/Register" method="post">
            <div class="agile-field-txt">
                <label>
                    <i class="fa fa-user" aria-hidden="true"></i> @SiteResource.UserName :
                </label>
                <input type="text" name="Name" placeholder="" required="" />
            </div>

            <div class="agile-field-txt">
                <label>
                    <i class="fa fa-inbox" aria-hidden="true"></i> @SiteResource.Email :
                </label>
                <input type="text" name="Email" placeholder="" required="" />
            </div>

            <div class="agile-field-txt">
                <label>
                    <i class="fa fa-lock" aria-hidden="true"></i> @SiteResource.Password :
                </label>
                <input type="password" name="Password" placeholder="" required="" id="password1" />

            </div>

            <div class="agile-field-txt">
                <label>
                    <i class="fa fa-lock" aria-hidden="true"></i> @SiteResource.ConfirmPassword :
                </label>
                <input type="password" name="ConfirmPass" placeholder="" required="" id="password2" />

            </div>

            <div class="agile-field-txt">
                <label>
                    <i class="fa fa-phone" aria-hidden="true"></i> @SiteResource.Phone :
                </label>
                <input type="text" id="phone" name="Phone" placeholder="" required="" />
            </div>

            <div class="agile-field-txt">
                <label>
                    <i class="fa fa-location-arrow" aria-hidden="true"></i> @SiteResource.Country :
                </label>
                <input type="text" name="Country" placeholder="" required="" />
            </div>


            <div class="w3ls-login  w3l-sub">
                <input type="submit" value="@SiteResource.Register">
            </div>
            <div class="agile_label">
                <p>@SiteResource.Alreadyregistered <a href="~/Home/Login">@SiteResource.Login</a></p>
            </div>
        </form>
    </div>
    <!-- //form ends here -->
    <script>

        var phone = document.getElementById("phone");
        phone.onchange=function()
        {
            var p = document.getElementById("phone");
            if (p.value.length > 11 ||isNaN(p.value))
            {
                document.getElementById("phone").setCustomValidity("Phone Must Be < 12 Number & No Chars");
            } else {
                document.getElementById("phone").setCustomValidity('');
            }
        }
    </script>
    <script type="text/javascript">
		window.onload = function () {
			document.getElementById("password1").onchange = validatePassword;
			document.getElementById("password2").onchange = validatePassword;
		}

		function validatePassword() {
			var pass2 = document.getElementById("password2").value;
			var pass1 = document.getElementById("password1").value;
			if (pass1 != pass2)
				document.getElementById("password2").setCustomValidity("Passwords Don't Match");
			else
				document.getElementById("password2").setCustomValidity('');
			//empty string means no validation error
		}
    </script>
</body>
</html>
